#  Fase 1: Construcci贸n de React
FROM node:18 AS builder
WORKDIR /app

# Copiar archivos y dependencias
COPY package.json package-lock.json ./
RUN npm install

# Copiar el c贸digo fuente y construir la aplicaci贸n
COPY . .
RUN npm run build

#  Fase 2: Servir con Nginx
FROM nginx:latest
WORKDIR /usr/share/nginx/html

# Copiar los archivos compilados de React a la carpeta p煤blica de Nginx
COPY --from=builder /app/dist .

# Copiar configuraci贸n de Nginx
COPY nginx/frontend.conf /etc/nginx/conf.d/default.conf

# Configurar permisos para evitar errores de acceso
RUN chmod -R 755 /usr/share/nginx/html && \
    chown -R nginx:nginx /usr/share/nginx/html

# Exponer el puerto 80
EXPOSE 80

# Comando de inicio
CMD ["nginx", "-g", "daemon off;"]
